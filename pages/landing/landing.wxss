.avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  overflow: hidden;
  background: grey;
  margin: 30px 0 10px 0;
}
.greeting {
  color: white;
  font-size: 18px;
  margin: 0;
  padding: 0;
}
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.btn-start {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}
